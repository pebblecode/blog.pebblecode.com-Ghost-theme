{{!< default}}

<section class="post">
  {{#post}}

    <div class="post-content">
      <h2 class="post-title call-out">{{title}}</h2>

      {{content}}

      <div class="thoughts">
        <span>Share your thoughts with us on</span> <a href="http://twitter.com/home?status=@pebblecode" target="_blank">twitter</a>
      </div>
    </div> {{!-- end .post-content --}}

    <div class="post-meta">
      <h4 class="author">{{author.name}}</h4>

      <span class="date">{{date format="DD MMMM YYYY"}}</span>

      <ul class="tags">
        {{#foreach tags}}
            <li><a href="{{url}}">{{name}}</a></li>
        {{/foreach}}
      </ul>
    </div> {{!-- end .post-meta --}}

  {{/post}}
</section> {{!-- end .post --}}